@page "/flightsearch"

<h3>Flight Search</h3>

<div class="form-group">
    <label for="searchFlightNumber">Enter Flight Number:</label>
    <input type="text" id="searchFlightNumber" class="form-control" @bind="searchFlightNumber" />
</div>

<button class="btn btn-primary" @onclick="SearchFlight">Search</button>

@if (foundFlight != null)
{
    <div class="mt-3">
        <h4>Found Flight:</h4>
        <p>Flight Number: @foundFlight.FlightNumber</p>
        <p>Origin: @foundFlight.Origin</p>
        <p>Destination: @foundFlight.Destination</p>
        <p>Departure Time: @foundFlight.DepartureTime.ToString("yyyy-MM-dd HH:mm")</p>
        <!-- Add other flight properties as needed -->
    </div>
}
<div class="Flight_Finder">
    <label for="destinationAirport">To:</label>
    <input type="text" id="destinationAirport" @bind="destinationAirport" placeholder="Any" />
</div>

<div class="Flight_Finder">
    <label for="dayOfWeek">Day of Week:</label>
    <input type="text" id="dayOfWeek" @bind="dayOfWeek" placeholder="Any" />
</div>

<button @onclick="FindFlights">Search Flights</button>

<h3>Flights</h3>

@if (flights != null && flights.Count > 0)
{
    <h4>Matching Flights:</h4>
    <ul>
        @foreach (var flight in flights)
        {
            <li>@flight.FlightNumber - @flight.DepartureTime to @flight.ArrivalTime</li>
        }
    </ul>
}
else
{
    <p>No matching flights found.</p>
}

